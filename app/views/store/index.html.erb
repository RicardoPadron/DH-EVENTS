<div class="col-sm-9">
	<div class="row">
        <div class="col-lg-8">
            <h1 class="page-header">
                DH-Events <small>Catalogo talavera</small>
			</h1>
         		<div class="alert alert-info alert-dismissable">
                    <strong><p id="notice"><%= notice %></p></strong> 
                 </div>
                        
        </div>
    </div>

    <div class="row">
    	<% cache @products do %>
		<% @products.each do |product| %>
		<% cache product do %>
        <div class="col-lg-8">                  
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
						<div class="col-xs-3">
                            <i class="img-rounded"><%= image_tag(product.image_url) %> </i>
                            <br>
                        </div>
                         <div class="col-xs-9 text-right">
                            <div class="huge"><%= number_to_currency(product.price) %></div>
                            <div><%= product.title %></div>
                            <%= sanitize(product.description) %>
                            <div class="price_line">
								<span class="price"></span>
                             </div>
                        </div>
                    </div>
                
                    <div class="panel-footer">
                        <span class="pull-left"> <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %></span>
							<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                    </div>
                
                </div>
        		<% end %>
				<% end %>
				<% end %>
            </div>
            </div>




            <div class="col-lg-3">
                    <!--poner una tipo galeria-->
               <div class="alert alert-info alert-dismissable">

      
    
          
            <% if @cart %>
                    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                    <%= render @cart %>
                  <% end %>
                <% end %> 
            </div>    
    </div>



                    
                        
                        </div>
                     
                        
            </div>
                </div>










        </div>












    </div>



</div>




            